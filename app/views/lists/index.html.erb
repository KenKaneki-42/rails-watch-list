<div class="container-md">
  <h1 class="mb-3">Listing Lists</h1>
  <div>
    <ul>
      <% @lists.each do |list| %>
      <li><%= link_to list.name, list_path(list) %></li>
      <% end %>
    </ul>
  </div>

  <h1 class="mb-3">Listing Movies</h1>
  <div class="cards">
      <% @movies.each do |movie| %>
      <div class="card-movie">
        <%= image_tag "https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg" %>
        <div class="card-movie-infos">
          <%= movie.title %>
        </div>
      </div>
      <% end %>
  </div>

  <div>
    <p><%= link_to "Add a new list", new_list_path %></p>
  </div>
</div>
